{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es6",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "lib": [
      "es2019"
    ]
  },
  "include": ["./src/**/*"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  }
}
